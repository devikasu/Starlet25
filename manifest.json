{
  "manifest_version": 3,
  "name": "Starlet25 - Text Extractor",
  "version": "1.0.0",
  "description": "Extract main page text while avoiding navigation elements",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentScript.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.tsx",
    "default_title": "Starlet25"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
